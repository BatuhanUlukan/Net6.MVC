@model ProcessAddDto
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Servis Yönetimi /</span> Servis Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="Service" asp-action="Add" method="post" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="Title" id="defaultFormControlInput" class="form-label">Başlık</label>
                            <input asp-for="Title" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Başlık giriniz." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content" class="form-label">İçerik</label>
                            <textarea asp-for="Content" type="text" class="editor" id="editor" placeholder="Lütfen içerik giriniz." aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="margin-top:20px">
                            <span asp-validation-for="Image" class="text-danger"></span>
                            <label asp-for="Photo" class="form-label">Başlık için resim seçiniz</label><br />
                            <input asp-for="Photo" type="file" class="form-control-file" accept=".jpg,.jpeg,.png,.gif,.svg">
                        </div>



                        <div class="form-group" style="margin-top:20px">
                            <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts
    {
    <script>
        CKEDITOR.replace('editor');
    </script>
    }


