@model List<SeoDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Seo Yönetimi /</span> Seolar
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <table class="table table-bordered" id="T" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var seo in Model)
                    {
                        <tr name="@seo.Id">
                            <td>@seo.Author</td>
                            <td>@seo.CreatedDate.ToShortDateString()</td>
                            <td>@seo.CreatedBy</td>
                            <td>@(seo.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                            <td>
                                        <a class="btn btn-warning btn-sm" data-id="@seo.Id" asp-area="Admin" asp-controller="Seo" asp-action="UndoDelete" asp-route-seoId="@seo.Id"><i class="bx bx-undo"></i></a>
                                @*<a class="btn btn-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id"><i class="bx bx-minus-circle"></i></a>*@

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/tIndex.js" type="application/ecmascript"></script>
}