@using NET6.Entity.DTOs.Socials;
@model List<SocialDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Medya Yönetimi /</span> Medyalar
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Social" asp-action="Add">
                Social Ekle <i class="bx bx-plus"></i>
            </a>

            <table class="table table-bordered" id="T" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var social in Model)
                    {

                        <tr name="@social.Id">
                            <td>@social.Name</td>
                            <td>@social.CreatedDate.ToShortDateString()</td>
                            <td>@social.CreatedBy</td>
                            <td>@(social.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@social.Id" asp-area="Admin" asp-controller="Social" asp-action="Update" asp-route-socialId="@social.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@social.Id" asp-area="Admin" asp-controller="Social" asp-action="Delete" asp-route-socialId="@social.Id"><i class="bx bx-minus-circle"></i></a>
                            </td>
                        </tr>

                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/tIndex.js" type="application/ecmascript"></script>
}