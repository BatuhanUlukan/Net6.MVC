@using Microsoft.Extensions.Options
@using NET6.Entity.Entities
@using NET6.Core.Entities
@{
    Layout = "_LayoutError";
    ViewBag.Title = "Sunucu Hatası (500)"; // Veritabanı Hatası
    MvcErrorModel errorModel = ViewData["MvcErrorModel"] as MvcErrorModel;
}


<div class="col-sm-10 col-sm-offset-1  text-center">
    <div class="four_zero_four_bg">
        <h1 class="text-center ">404</h1>


    </div>

    <div class="contant_box_404">
        <h3 class="h2">
            Look like you're lost
        </h3>

        <p>@errorModel.Message</p>

        <a asp-controller="Home" asp-action="Index" class="link_404">Go to Home</a>
    </div>
</div>